<Window x:Class="Proyecto_taller.Views.RegistroRapidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro Rápido de Trabajo" 
        Height="650" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2C3544"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubmitButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource SubmitButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#4A90E2" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#34495E" 
                    CornerRadius="8,8,0,0"
                    Padding="20,15">
                <Grid>
                    <TextBlock Text="⚡ Registro Rápido de Trabajo" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            Click="CloseButton_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Padding="10,5"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25,20">
                <StackPanel>
                    <!-- Datos del Cliente -->
                    <TextBlock Text="📋 DATOS DEL CLIENTE" 
                              Foreground="#4A90E2" 
                              FontWeight="Bold"
                              FontSize="14"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Nombre:" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtNombre"/>

                    <TextBlock Text="Apellido:" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtApellido"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Teléfono:" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtTelefono"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Email:" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtEmail"/>
                        </StackPanel>
                    </Grid>

                    <!-- Separador -->
                    <Border Height="2" Background="#4A90E2" Margin="0,15" Opacity="0.3"/>

                    <!-- Datos del Vehículo -->
                    <TextBlock Text="🚗 DATOS DEL VEHÍCULO" 
                              Foreground="#4A90E2" 
                              FontWeight="Bold"
                              FontSize="14"
                              Margin="0,10,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Marca:" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtMarca"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Modelo:" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtModelo"/>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Placa:" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtPlaca"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Año:" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtAnio"/>
                        </StackPanel>
                    </Grid>

                    <!-- Separador -->
                    <Border Height="2" Background="#4A90E2" Margin="0,15" Opacity="0.3"/>

                    <!-- Datos del Trabajo -->
                    <TextBlock Text="🔧 DATOS DEL TRABAJO" 
                              Foreground="#4A90E2" 
                              FontWeight="Bold"
                              FontSize="14"
                              Margin="0,10,0,10"/>

                    <TextBlock Text="Tipo de Trabajo:" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbTipoTrabajo" SelectedIndex="0">
                        <ComboBoxItem Content="Mecánica"/>
                        <ComboBoxItem Content="Chapería"/>
                    </ComboBox>

                    <TextBlock Text="Descripción del Problema:" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtDescripcion" 
                            Height="80" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"/>

                    <TextBlock Text="Precio Estimado (Bs.):" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtPrecio" Text="0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="#34495E" 
                    CornerRadius="0,0,8,8"
                    Padding="25,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✕ Cancelar" 
                            Click="CloseButton_Click"
                            Style="{StaticResource CancelButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="✅ Registrar Trabajo" 
                            Click="RegistrarButton_Click"
                            Style="{StaticResource SubmitButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>