<Page x:Class="Proyecto_taller.Views.Clientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Módulo de Clientes"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para botones modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2868A8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón eliminar -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Estilo para encabezados del DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Estilo para celdas del DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F4F8"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sección de encabezado y botones -->
        <Border Grid.Row="0" Background="White" 
                CornerRadius="8" 
                Padding="20"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" 
                          Text="Gestión de Clientes" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="#2C3E50"/>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="🔄 Cargar Clientes" 
                            Command="{Binding CargarClientesCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="➕ Agregar" 
                            Command="{Binding AgregarClienteCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="✏️ Editar" 
                            Command="{Binding EditarClienteCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="🗑️ Eliminar" 
                            Command="{Binding EliminarClienteCommand}" 
                            Style="{StaticResource DeleteButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid con sombra -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Opacity="0.1" 
                                Color="#000000"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Clientes}" 
                      SelectedItem="{Binding ClienteSeleccionado}"
                      Margin="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding ClienteID}" 
                                       IsReadOnly="True"
                                       Width="60"/>
                    <DataGridTextColumn Header="Nombre" 
                                       Binding="{Binding Nombre}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Apellido" 
                                       Binding="{Binding Apellido}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Teléfono" 
                                       Binding="{Binding Telefono}"
                                       Width="120"/>
                    <DataGridTextColumn Header="Correo" 
                                       Binding="{Binding Correo}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Dirección" 
                                       Binding="{Binding Direccion}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Fecha Registro" 
                                       Binding="{Binding FechaRegistro, StringFormat=dd/MM/yyyy}"
                                       Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>