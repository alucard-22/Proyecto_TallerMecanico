<Window x:Class="Proyecto_taller.Views.CambiarPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cambiar Contraseña" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2C3544"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#4A90E2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SubmitButton" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource SubmitButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#4A90E2" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#34495E" 
                    CornerRadius="8,8,0,0"
                    Padding="20,15">
                <Grid>
                    <TextBlock Text="🔒 Cambiar Contraseña" 
                              FontSize="18" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <Button Content="✕" 
                            Click="CloseButton_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Padding="8,5"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Form Content -->
            <StackPanel Grid.Row="1" Margin="25,20,25,20">
                <TextBlock x:Name="txtUsuarioInfo"
                          Text="Usuario: "
                          Foreground="White"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Nueva Contraseña *" Style="{StaticResource FormLabel}"/>
                <PasswordBox x:Name="txtNuevaPassword"/>

                <TextBlock Text="Confirmar Contraseña *" Style="{StaticResource FormLabel}"/>
                <PasswordBox x:Name="txtConfirmarPassword"/>

                <Border Background="#3498DB" 
                        CornerRadius="5" 
                        Padding="10" 
                        Margin="0,15,0,0">
                    <TextBlock TextWrapping="Wrap" 
                              Foreground="White" 
                              FontSize="11">
                        <Run Text="ℹ️ Nota:"/>
                        <Run Text="La contraseña debe tener al menos 6 caracteres."/>
                    </TextBlock>
                </Border>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#34495E" 
                    CornerRadius="0,0,8,8"
                    Padding="25,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="✕ Cancelar" 
                            Click="CloseButton_Click"
                            Style="{StaticResource CancelButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="✅ Cambiar Contraseña" 
                            Click="GuardarButton_Click"
                            Style="{StaticResource SubmitButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>