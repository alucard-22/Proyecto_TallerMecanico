<Page x:Class="Proyecto_taller.Views.Inventario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Módulo de Inventario"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para botones modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2868A8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón eliminar -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón verde -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón naranja -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Estilo para encabezados del DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Estilo para celdas del DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F4F8"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sección de encabezado y botones -->
        <Border Grid.Row="0" Background="White" 
                CornerRadius="8" 
                Padding="20"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título y estadísticas -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="Gestión de Inventario" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="#E74C3C" 
                                CornerRadius="5" 
                                Padding="12,6" 
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️ Stock Bajo: " 
                                          Foreground="White" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding RepuestosStockBajo}" 
                                          Foreground="White" 
                                          FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#27AE60" 
                                CornerRadius="5" 
                                Padding="12,6" 
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦 Total Items: " 
                                          Foreground="White" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding TotalRepuestos}" 
                                          Foreground="White" 
                                          FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="🔄 Cargar Inventario" 
                            Command="{Binding CargarRepuestosCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="➕ Agregar Repuesto" 
                            Command="{Binding AgregarRepuestoCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="✏️ Editar" 
                            Command="{Binding EditarRepuestoCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="📥 Entrada Stock" 
                            Command="{Binding EntradaStockCommand}" 
                            Style="{StaticResource SuccessButton}"/>
                    <Button Content="📤 Salida Stock" 
                            Command="{Binding SalidaStockCommand}" 
                            Style="{StaticResource WarningButton}"/>
                    <Button Content="🗑️ Eliminar" 
                            Command="{Binding EliminarRepuestoCommand}" 
                            Style="{StaticResource DeleteButton}"/>
                </StackPanel>

                <!-- Filtros -->
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <TextBlock Text="Filtrar:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"/>
                    <RadioButton Content="Todos" 
                                IsChecked="{Binding FiltroTodos}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Stock Bajo" 
                                IsChecked="{Binding FiltroStockBajo}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Sin Stock" 
                                IsChecked="{Binding FiltroSinStock}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid con sombra -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Opacity="0.1" 
                                Color="#000000"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Repuestos}" 
                      SelectedItem="{Binding RepuestoSeleccionado}"
                      Margin="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding RepuestoID}" 
                                       IsReadOnly="True"
                                       Width="60"/>
                    <DataGridTextColumn Header="Nombre" 
                                       Binding="{Binding Nombre}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Descripción" 
                                       Binding="{Binding Descripcion}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Precio Unit." 
                                       Binding="{Binding PrecioUnitario, StringFormat=Bs. {0:N2}}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Stock Actual" 
                                       Binding="{Binding StockActual}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Stock Mínimo" 
                                       Binding="{Binding StockMinimo}"
                                       Width="120"/>
                    <DataGridTextColumn Header="Valor Total" 
                                       Binding="{Binding ValorTotal, StringFormat=Bs. {0:N2}}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Fecha Registro" 
                                       Binding="{Binding FechaRegistro, StringFormat=dd/MM/yyyy}"
                                       Width="130"/>
                </DataGrid.Columns>

                <!-- Estilo para resaltar stock bajo -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EsStockBajo}" Value="True">
                                <Setter Property="Background" Value="#FFEBEE"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding StockActual}" Value="0">
                                <Setter Property="Background" Value="#FFCDD2"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</Page>