<Window x:Class="Proyecto_taller.Views.GestionarTrabajoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Servicios y Repuestos del Trabajo" 
        Height="700" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#2C3544"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4A90E2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#4A90E2" BorderThickness="2" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#34495E" 
                    CornerRadius="8,8,0,0"
                    Padding="20,15">
                <Grid>
                    <StackPanel>
                        <TextBlock x:Name="txtTituloTrabajo"
                                  Text="🔧 Gestionar Trabajo" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="White"/>
                        <TextBlock x:Name="txtInfoTrabajo"
                                  Text="Información del trabajo" 
                                  FontSize="12" 
                                  Foreground="#CCCCCC"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                    <Button Content="✕" 
                            Click="CloseButton_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SECCIÓN IZQUIERDA: SERVICIOS -->
                <Border Grid.Column="0" 
                        Background="#34495E" 
                        CornerRadius="8" 
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <TextBlock Grid.Row="0"
                                  Text="🛠️ SERVICIOS DISPONIBLES" 
                                  Style="{StaticResource SectionTitle}"/>

                        <!-- Buscador de servicios -->
                        <TextBox Grid.Row="1"
                                x:Name="txtBuscarServicio"
                                Padding="8"
                                Margin="0,0,0,10"
                                TextChanged="TxtBuscarServicio_TextChanged"
                                FontSize="12">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="🔍 Buscar servicio..." 
                                                                      Foreground="Gray" 
                                                                      FontSize="12"
                                                                      Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Lista de servicios disponibles -->
                        <DataGrid Grid.Row="2"
                                 x:Name="dgServiciosDisponibles"
                                 SelectionMode="Single"
                                 IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Servicio" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Costo" Binding="{Binding CostoBase, StringFormat=Bs. {0:N2}}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Botones para servicios -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <TextBox x:Name="txtCantidadServicio" 
                                    Width="60" 
                                    Text="1" 
                                    TextAlignment="Center"
                                    Margin="5"/>
                            <Button Content="➕ Agregar Servicio" 
                                   Click="AgregarServicio_Click"
                                   Style="{StaticResource SuccessButton}"/>
                        </StackPanel>

                        <!-- Servicios agregados al trabajo -->
                        <TextBlock Grid.Row="5"
                                  Text="✅ SERVICIOS DEL TRABAJO" 
                                  Style="{StaticResource SectionTitle}"/>

                        <DataGrid Grid.Row="6"
                                 x:Name="dgServiciosTrabajo"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Servicio" Binding="{Binding NombreServicio}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="50"/>
                                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=Bs. {0:N2}}" Width="80" IsReadOnly="True"/>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️" 
                                                   Click="EliminarServicio_Click"
                                                   Style="{StaticResource DeleteButton}"
                                                   Padding="5,2"
                                                   Margin="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- SECCIÓN DERECHA: REPUESTOS -->
                <Border Grid.Column="2" 
                        Background="#34495E" 
                        CornerRadius="8" 
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <TextBlock Grid.Row="0"
                                  Text="📦 REPUESTOS DISPONIBLES" 
                                  Style="{StaticResource SectionTitle}"/>

                        <!-- Buscador de repuestos -->
                        <TextBox Grid.Row="1"
                                x:Name="txtBuscarRepuesto"
                                Padding="8"
                                Margin="0,0,0,10"
                                TextChanged="TxtBuscarRepuesto_TextChanged"
                                FontSize="12">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="🔍 Buscar repuesto..." 
                                                                      Foreground="Gray" 
                                                                      FontSize="12"
                                                                      Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Lista de repuestos disponibles -->
                        <DataGrid Grid.Row="2"
                                 x:Name="dgRepuestosDisponibles"
                                 SelectionMode="Single"
                                 IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Repuesto" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding StockActual}" Width="50"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding PrecioUnitario, StringFormat=Bs. {0:N2}}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Botones para repuestos -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <TextBox x:Name="txtCantidadRepuesto" 
                                    Width="60" 
                                    Text="1" 
                                    TextAlignment="Center"
                                    Margin="5"/>
                            <Button Content="➕ Agregar Repuesto" 
                                   Click="AgregarRepuesto_Click"
                                   Style="{StaticResource SuccessButton}"/>
                        </StackPanel>

                        <!-- Repuestos agregados al trabajo -->
                        <TextBlock Grid.Row="5"
                                  Text="✅ REPUESTOS DEL TRABAJO" 
                                  Style="{StaticResource SectionTitle}"/>

                        <DataGrid Grid.Row="6"
                                 x:Name="dgRepuestosTrabajo"
                                 SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Repuesto" Binding="{Binding NombreRepuesto}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="50"/>
                                <DataGridTextColumn Header="P.Unit" Binding="{Binding PrecioUnitario, StringFormat=Bs. {0:N2}}" Width="70" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=Bs. {0:N2}}" Width="80" IsReadOnly="True"/>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️" 
                                                   Click="EliminarRepuesto_Click"
                                                   Style="{StaticResource DeleteButton}"
                                                   Padding="5,2"
                                                   Margin="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer con totales y botones -->
            <Border Grid.Row="2" 
                    Background="#34495E" 
                    CornerRadius="0,0,8,8"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Resumen de totales -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="#27AE60" CornerRadius="5" Padding="12,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰 Total Servicios: " Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtTotalServicios" Text="Bs. 0.00" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#3498DB" CornerRadius="5" Padding="12,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦 Total Repuestos: " Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtTotalRepuestos" Text="Bs. 0.00" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#E67E22" CornerRadius="5" Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💵 TOTAL TRABAJO: " Foreground="White" FontWeight="Bold"/>
                                <TextBlock x:Name="txtTotalGeneral" Text="Bs. 0.00" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Botones de acción -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="✕ Cancelar" 
                                Click="CloseButton_Click"
                                Style="{StaticResource DeleteButton}"/>
                        <Button Content="💾 Guardar Cambios" 
                                Click="GuardarCambios_Click"
                                Style="{StaticResource SuccessButton}"
                                Padding="25,8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>