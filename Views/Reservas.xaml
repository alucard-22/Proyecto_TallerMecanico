<Page x:Class="Proyecto_taller.Views.Reservas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Módulo de Reservas"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para botones modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2868A8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón eliminar -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón verde -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón naranja -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Estilo para encabezados del DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Estilo para celdas del DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F4F8"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sección de encabezado y botones -->
        <Border Grid.Row="0" Background="White" 
                CornerRadius="8" 
                Padding="20"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" 
                          Text="Gestión de Reservas" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="#2C3E50"/>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="🔄 Cargar Reservas" 
                            Command="{Binding CargarReservasCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="➕ Nueva Reserva" 
                            Command="{Binding AgregarReservaCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="✅ Confirmar" 
                            Command="{Binding ConfirmarReservaCommand}" 
                            Style="{StaticResource SuccessButton}"/>
                    <Button Content="❌ Cancelar" 
                            Command="{Binding CancelarReservaCommand}" 
                            Style="{StaticResource WarningButton}"/>
                    <Button Content="🗑️ Eliminar" 
                            Command="{Binding EliminarReservaCommand}" 
                            Style="{StaticResource DeleteButton}"/>
                </StackPanel>

                <!-- Filtros por estado -->
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <TextBlock Text="Filtrar por estado:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"/>
                    <RadioButton Content="Todas" 
                                IsChecked="{Binding FiltroTodas}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Pendientes" 
                                IsChecked="{Binding FiltroPendientes}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Confirmadas" 
                                IsChecked="{Binding FiltroConfirmadas}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Hoy" 
                                IsChecked="{Binding FiltroHoy}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid con sombra -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Opacity="0.1" 
                                Color="#000000"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Reservas}" 
                      SelectedItem="{Binding ReservaSeleccionada}"
                      Margin="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding ReservaID}" 
                                       IsReadOnly="True"
                                       Width="60"/>
                    <DataGridTextColumn Header="Cliente" 
                                       Binding="{Binding Cliente.Nombre}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Apellido" 
                                       Binding="{Binding Cliente.Apellido}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Teléfono" 
                                       Binding="{Binding Cliente.Telefono}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Vehículo" 
                                       Binding="{Binding Vehiculo.Marca}"
                                       Width="100"/>
                    <DataGridTextColumn Header="Placa" 
                                       Binding="{Binding Vehiculo.Placa}"
                                       Width="100"/>
                    <DataGridTextColumn Header="Fecha/Hora Cita" 
                                       Binding="{Binding FechaHoraCita, StringFormat=dd/MM/yyyy HH:mm}"
                                       Width="140"/>
                    <DataGridTextColumn Header="Tipo Servicio" 
                                       Binding="{Binding TipoServicio}"
                                       Width="120"/>
                    <DataGridTextColumn Header="Estado" 
                                       Binding="{Binding Estado}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Observaciones" 
                                       Binding="{Binding Observaciones}"
                                       Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>