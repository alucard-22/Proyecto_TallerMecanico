<Page x:Class="Proyecto_taller.Views.Reportes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Módulo de Reportes"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para tarjetas -->
        <Style x:Key="ReportCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para títulos -->
        <Style x:Key="CardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Estilo para botones -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para labels -->
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                          Text="📊 Reportes y Estadísticas" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Actualizar" 
                            Command="{Binding ActualizarReportesCommand}"
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="📥 Exportar Excel" 
                            Command="{Binding ExportarExcelCommand}"
                            Style="{StaticResource SuccessButton}"/>
                </StackPanel>
            </Grid>

            <!-- Contenido Principal -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filtros de Fecha -->
                <Border Grid.Row="0" Style="{StaticResource ReportCard}">
                    <StackPanel>
                        <TextBlock Text="📅 Período de Análisis" Style="{StaticResource CardTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                      Text="Fecha Inicio:" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"
                                      FontWeight="SemiBold"/>
                            <DatePicker Grid.Column="1" 
                                       SelectedDate="{Binding FechaInicio}"
                                       Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="3" 
                                      Text="Fecha Fin:" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"
                                      FontWeight="SemiBold"/>
                            <DatePicker Grid.Column="4" 
                                       SelectedDate="{Binding FechaFin}"
                                       Margin="0,0,10,0"/>

                            <Button Grid.Column="6"
                                   Content="Aplicar Filtro"
                                   Command="{Binding AplicarFiltroCommand}"
                                   Style="{StaticResource ModernButton}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Content="Hoy" 
                                   Command="{Binding FiltroHoyCommand}"
                                   Style="{StaticResource ModernButton}"/>
                            <Button Content="Esta Semana" 
                                   Command="{Binding FiltroSemanaCommand}"
                                   Style="{StaticResource ModernButton}"/>
                            <Button Content="Este Mes" 
                                   Command="{Binding FiltroMesCommand}"
                                   Style="{StaticResource ModernButton}"/>
                            <Button Content="Este Año" 
                                   Command="{Binding FiltroAnioCommand}"
                                   Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Estadísticas Generales -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource ReportCard}">
                        <StackPanel>
                            <TextBlock Text="💰 Ingresos Totales" Style="{StaticResource CardTitle}" FontSize="16"/>
                            <TextBlock Text="{Binding IngresosTotales, StringFormat=Bs. {0:N2}}" 
                                      Style="{StaticResource StatValue}"
                                      Foreground="#27AE60"/>
                            <TextBlock Text="{Binding TotalFacturas}" Style="{StaticResource StatLabel}"/>
                            <TextBlock Text="Facturas pagadas" Style="{StaticResource StatLabel}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource ReportCard}">
                        <StackPanel>
                            <TextBlock Text="🔧 Trabajos Realizados" Style="{StaticResource CardTitle}" FontSize="16"/>
                            <TextBlock Text="{Binding TrabajosRealizados}" 
                                      Style="{StaticResource StatValue}"
                                      Foreground="#3498DB"/>
                            <TextBlock Text="{Binding TrabajosEnProceso}" Style="{StaticResource StatLabel}"/>
                            <TextBlock Text="En proceso" Style="{StaticResource StatLabel}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource ReportCard}">
                        <StackPanel>
                            <TextBlock Text="👥 Clientes Atendidos" Style="{StaticResource CardTitle}" FontSize="16"/>
                            <TextBlock Text="{Binding ClientesAtendidos}" 
                                      Style="{StaticResource StatValue}"
                                      Foreground="#9B59B6"/>
                            <TextBlock Text="{Binding ClientesNuevos}" Style="{StaticResource StatLabel}"/>
                            <TextBlock Text="Nuevos clientes" Style="{StaticResource StatLabel}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource ReportCard}">
                        <StackPanel>
                            <TextBlock Text="📦 Repuestos Vendidos" Style="{StaticResource CardTitle}" FontSize="16"/>
                            <TextBlock Text="{Binding RepuestosVendidos}" 
                                      Style="{StaticResource StatValue}"
                                      Foreground="#E67E22"/>
                            <TextBlock Text="{Binding ValorRepuestos, StringFormat=Bs. {0:N2}}" 
                                      Style="{StaticResource StatLabel}"/>
                            <TextBlock Text="Valor total" Style="{StaticResource StatLabel}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Reportes Detallados -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top Servicios -->
                    <Border Grid.Column="0" Style="{StaticResource ReportCard}">
                        <StackPanel>
                            <TextBlock Text="🏆 Servicios Más Solicitados" Style="{StaticResource CardTitle}"/>
                            <DataGrid ItemsSource="{Binding TopServicios}"
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     GridLinesVisibility="None"
                                     HeadersVisibility="Column"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MaxHeight="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Servicio" Binding="{Binding Nombre}" Width="*"/>
                                    <DataGridTextColumn Header="Veces" Binding="{Binding Cantidad}" Width="80"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=Bs. {0:N2}}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- Trabajos por Estado -->
                    <Border Grid.Column="2" Style="{StaticResource ReportCard}">
                        <StackPanel>
                            <TextBlock Text="📈 Trabajos por Estado" Style="{StaticResource CardTitle}"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Pendientes -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                                    <Ellipse Width="15" Height="15" Fill="#F39C12" Margin="0,0,10,0"/>
                                    <TextBlock Text="Pendientes" FontSize="14"/>
                                </StackPanel>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding TrabajosPendientes}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Margin="10,5"/>

                                <!-- En Progreso -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                                    <Ellipse Width="15" Height="15" Fill="#3498DB" Margin="0,0,10,0"/>
                                    <TextBlock Text="En Progreso" FontSize="14"/>
                                </StackPanel>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding TrabajosEnProceso}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Margin="10,5"/>

                                <!-- Finalizados -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                                    <Ellipse Width="15" Height="15" Fill="#27AE60" Margin="0,0,10,0"/>
                                    <TextBlock Text="Finalizados" FontSize="14"/>
                                </StackPanel>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                          Text="{Binding TrabajosFinalizados}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Margin="10,5"/>

                                <!-- Total -->
                                <Border Grid.Row="3" Grid.ColumnSpan="2" 
                                       Background="#ECF0F1" 
                                       CornerRadius="5" 
                                       Padding="10" 
                                       Margin="0,10,0,0">
                                    <Grid>
                                        <TextBlock Text="TOTAL" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding TrabajosRealizados}" 
                                                  FontSize="20" 
                                                  FontWeight="Bold"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Gráfico simple de barras -->
                            <Border Background="#ECF0F1" 
                                   CornerRadius="5" 
                                   Padding="15" 
                                   Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="Distribución Visual" 
                                              FontWeight="SemiBold" 
                                              Margin="0,0,0,10"/>

                                    <!-- Barra Pendientes -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Pendientes" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" 
                                               Background="#F39C12" 
                                               Height="25" 
                                               CornerRadius="3"
                                               Width="{Binding BarraPendientes}"/>
                                    </Grid>

                                    <!-- Barra En Progreso -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="En Progreso" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" 
                                               Background="#3498DB" 
                                               Height="25" 
                                               CornerRadius="3"
                                               Width="{Binding BarraEnProceso}"/>
                                    </Grid>

                                    <!-- Barra Finalizados -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Finalizados" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" 
                                               Background="#27AE60" 
                                               Height="25" 
                                               CornerRadius="3"
                                               Width="{Binding BarraFinalizados}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>