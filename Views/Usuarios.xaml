<Page x:Class="Proyecto_taller.Views.Usuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Administración de Usuarios"
      Background="Transparent">

    <Page.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="ColumnHeaderHeight" Value="50"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#34495E" Offset="0"/>
                        <GradientStop Color="#2C3E50" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#E1E8ED" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="👥 " FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Administración de Usuarios" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Background="#4A90E2"
                            CornerRadius="15"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔒 Solo Administradores" 
                                      Foreground="White" 
                                      FontWeight="SemiBold"
                                      FontSize="12"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Botones -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="🔄 Actualizar" 
                            Command="{Binding CargarUsuariosCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="➕ Nuevo Usuario" 
                            Command="{Binding AgregarUsuarioCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="🔑 Cambiar Contraseña" 
                            Command="{Binding CambiarPasswordCommand}" 
                            Style="{StaticResource SuccessButton}"/>
                    <Button Content="⚡ Activar/Desactivar" 
                            Command="{Binding ActivarDesactivarCommand}" 
                            Style="{StaticResource WarningButton}"/>
                    <Button Content="🗑️ Eliminar" 
                            Command="{Binding EliminarUsuarioCommand}" 
                            Style="{StaticResource DeleteButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Background="White" CornerRadius="8"
                BorderBrush="#E1E8ED" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" BlurRadius="15" Opacity="0.15"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Usuarios}" 
                      SelectedItem="{Binding UsuarioSeleccionado}"
                      Margin="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UsuarioID}" Width="70" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Usuario" Binding="{Binding NombreUsuario}" Width="150" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="*" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="120" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Estado" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Activo, Converter={StaticResource BoolToColorConverter}}"
                                        CornerRadius="12"
                                        Padding="8,4">
                                    <TextBlock Text="{Binding Activo, Converter={StaticResource BoolToTextConverter}}"
                                              Foreground="White"
                                              FontWeight="Bold"
                                              FontSize="11"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Fecha Creación" 
                                       Binding="{Binding FechaCreacion, StringFormat=dd/MM/yyyy}" 
                                       Width="130" 
                                       IsReadOnly="True"/>

                    <DataGridTextColumn Header="Último Acceso" 
                                       Binding="{Binding UltimoAcceso, StringFormat=dd/MM/yyyy HH:mm}" 
                                       Width="150" 
                                       IsReadOnly="True"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Activo}" Value="False">
                                <Setter Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Opacity" Value="0.7"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</Page>