<Page x:Class="Proyecto_taller.Views.Facturacion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Módulo de Facturación"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para botones modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2868A8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón eliminar -->
        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón verde -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón naranja -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8FAFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Estilo para encabezados del DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Estilo para celdas del DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F4F8"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sección de encabezado y botones -->
        <Border Grid.Row="0" Background="White" 
                CornerRadius="8" 
                Padding="20"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título y estadísticas -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="Gestión de Facturación" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="#27AE60" 
                                CornerRadius="5" 
                                Padding="12,6" 
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰 Total Facturado: " 
                                          Foreground="White" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding TotalFacturado, StringFormat=Bs. {0:N2}}" 
                                          Foreground="White" 
                                          FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#4A90E2" 
                                CornerRadius="5" 
                                Padding="12,6" 
                                Margin="5,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄 Total Facturas: " 
                                          Foreground="White" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding TotalFacturas}" 
                                          Foreground="White" 
                                          FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="🔄 Cargar Facturas" 
                            Command="{Binding CargarFacturasCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="➕ Nueva Factura" 
                            Command="{Binding NuevaFacturaCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="👁️ Ver Detalle" 
                            Command="{Binding VerDetalleCommand}" 
                            Style="{StaticResource SuccessButton}"/>
                    <Button Content="🖨️ Imprimir" 
                            Command="{Binding ImprimirFacturaCommand}" 
                            Style="{StaticResource ModernButton}"/>
                    <Button Content="❌ Anular" 
                            Command="{Binding AnularFacturaCommand}" 
                            Style="{StaticResource WarningButton}"/>
                    <Button Content="🗑️ Eliminar" 
                            Command="{Binding EliminarFacturaCommand}" 
                            Style="{StaticResource DeleteButton}"/>
                </StackPanel>

                <!-- Filtros -->
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <TextBlock Text="Filtrar:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"/>
                    <RadioButton Content="Todas" 
                                IsChecked="{Binding FiltroTodas}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Pagadas" 
                                IsChecked="{Binding FiltroPagadas}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Pendientes" 
                                IsChecked="{Binding FiltroPendientes}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                    <RadioButton Content="Este Mes" 
                                IsChecked="{Binding FiltroEsteMes}"
                                GroupName="Filtro"
                                Margin="5,0"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid con sombra -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8"
                BorderBrush="#E1E8ED" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Opacity="0.1" 
                                Color="#000000"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Facturas}" 
                      SelectedItem="{Binding FacturaSeleccionada}"
                      Margin="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding FacturaID}" 
                                       IsReadOnly="True"
                                       Width="60"/>
                    <DataGridTextColumn Header="Nº Factura" 
                                       Binding="{Binding NumeroFactura}"
                                       Width="130"/>
                    <DataGridTextColumn Header="Fecha" 
                                       Binding="{Binding FechaEmision, StringFormat=dd/MM/yyyy}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Cliente" 
                                       Binding="{Binding Trabajo.Vehiculo.Cliente.Nombre}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Vehículo" 
                                       Binding="{Binding Trabajo.Vehiculo.Marca}"
                                       Width="100"/>
                    <DataGridTextColumn Header="Placa" 
                                       Binding="{Binding Trabajo.Vehiculo.Placa}"
                                       Width="100"/>
                    <DataGridTextColumn Header="NIT" 
                                       Binding="{Binding NIT}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Razón Social" 
                                       Binding="{Binding RazonSocial}"
                                       Width="*"/>
                    <DataGridTextColumn Header="Subtotal" 
                                       Binding="{Binding Subtotal, StringFormat=Bs. {0:N2}}"
                                       Width="100"/>
                    <DataGridTextColumn Header="Descuento" 
                                       Binding="{Binding Descuento, StringFormat=Bs. {0:N2}}"
                                       Width="100"/>
                    <DataGridTextColumn Header="IVA" 
                                       Binding="{Binding IVA, StringFormat=Bs. {0:N2}}"
                                       Width="90"/>
                    <DataGridTextColumn Header="Total" 
                                       Binding="{Binding Total, StringFormat=Bs. {0:N2}}"
                                       Width="110"/>
                    <DataGridTextColumn Header="Estado" 
                                       Binding="{Binding Estado}"
                                       Width="100"/>
                </DataGrid.Columns>

                <!-- Estilo para resaltar estados -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Estado}" Value="Pendiente">
                                <Setter Property="Background" Value="#FFF3CD"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Estado}" Value="Anulada">
                                <Setter Property="Background" Value="#F8D7DA"/>
                                <Setter Property="Foreground" Value="#721C24"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</Page>