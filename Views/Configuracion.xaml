<Page x:Class="Proyecto_taller.Views.Configuracion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Configuración"
      Background="Transparent">

    <Page.Resources>
        <!-- Estilo para tarjetas -->
        <Style x:Key="ConfigCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para títulos de sección -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Estilo para etiquetas -->
        <Style x:Key="ConfigLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Estilo para textbox -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Estilo para botones -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2868A8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                      Text="⚙️ Configuración del Sistema" 
                      FontSize="28" 
                      FontWeight="Bold"
                      Foreground="White"
                      Margin="0,0,0,30"/>

            <!-- Contenido -->
            <StackPanel Grid.Row="1">

                <!-- Información del Taller -->
                <Border Style="{StaticResource ConfigCard}">
                    <StackPanel>
                        <TextBlock Text="🏢 Información del Taller" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="Nombre del Taller:" Style="{StaticResource ConfigLabel}"/>
                        <TextBox Text="{Binding NombreTaller, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Dirección:" Style="{StaticResource ConfigLabel}"/>
                        <TextBox Text="{Binding DireccionTaller, UpdateSourceTrigger=PropertyChanged}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Teléfono:" Style="{StaticResource ConfigLabel}"/>
                                <TextBox Text="{Binding TelefonoTaller, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Email:" Style="{StaticResource ConfigLabel}"/>
                                <TextBox Text="{Binding EmailTaller, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="NIT:" Style="{StaticResource ConfigLabel}"/>
                        <TextBox Text="{Binding NITTaller, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Content="💾 Guardar Información" 
                                Command="{Binding GuardarInformacionCommand}"
                                Style="{StaticResource ModernButton}"
                                HorizontalAlignment="Left"
                                Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Configuración de Facturación -->
                <Border Style="{StaticResource ConfigCard}">
                    <StackPanel>
                        <TextBlock Text="📄 Configuración de Facturación" Style="{StaticResource SectionTitle}"/>

                        <!-- ❌ ELIMINADO: Campo de IVA -->

                        <TextBlock Text="Descuento Máximo (%):" Style="{StaticResource ConfigLabel}"/>
                        <TextBox Text="{Binding DescuentoMaximo, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- ❌ ELIMINADO: CheckBox de incluir IVA automáticamente -->

                        <CheckBox Content="Solicitar NIT en todas las facturas" 
                 IsChecked="{Binding SolicitarNIT}"
                 Margin="0,10,0,0"
                 FontSize="14"/>

                        <Button Content="💾 Guardar Configuración" 
                Command="{Binding GuardarFacturacionCommand}"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Left"
                Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Configuración de Base de Datos -->
                <Border Style="{StaticResource ConfigCard}">
                    <StackPanel>
                        <TextBlock Text="🗄️ Base de Datos" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="Cadena de Conexión:" Style="{StaticResource ConfigLabel}"/>
                        <TextBox Text="{Binding ConnectionString, UpdateSourceTrigger=PropertyChanged}" 
                                IsReadOnly="True"
                                Background="#ECF0F1"/>

                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Content="🔄 Probar Conexión" 
                                    Command="{Binding ProbarConexionCommand}"
                                    Style="{StaticResource ModernButton}"/>
                            <Button Content="📦 Respaldar Base de Datos" 
                                    Command="{Binding RespaldarBDCommand}"
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Gestión de Servicios -->
                <Border Style="{StaticResource ConfigCard}">
                    <StackPanel>
                        <TextBlock Text="🔧 Gestión de Servicios" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="Servicios del catálogo disponibles para trabajos:" 
                                  Style="{StaticResource ConfigLabel}"/>

                        <ListBox ItemsSource="{Binding Servicios}"
                                Height="150"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"
                                Margin="0,10,0,15">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="{Binding Nombre}" FontWeight="SemiBold" Width="200"/>
                                        <TextBlock Text="-" Margin="10,0"/>
                                        <TextBlock Text="{Binding CostoBase, StringFormat=Bs. {0:N2}}" Foreground="#27AE60"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="➕ Agregar Servicio" 
                                    Command="{Binding AgregarServicioCommand}"
                                    Style="{StaticResource ModernButton}"/>
                            <Button Content="✏️ Editar Servicio" 
                                    Command="{Binding EditarServicioCommand}"
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Mantenimiento del Sistema -->
                <Border Style="{StaticResource ConfigCard}">
                    <StackPanel>
                        <TextBlock Text="🛠️ Mantenimiento del Sistema" Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="Acciones de mantenimiento y limpieza:" 
                                  Foreground="#7F8C8D"
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="🗑️ Limpiar Logs" 
                                    Command="{Binding LimpiarLogsCommand}"
                                    Style="{StaticResource ModernButton}"/>
                            <Button Content="📊 Ver Estadísticas" 
                                    Command="{Binding VerEstadisticasCommand}"
                                    Style="{StaticResource ModernButton}"/>
                            <Button Content="⚠️ Reiniciar Base de Datos" 
                                    Command="{Binding ReiniciarBDCommand}"
                                    Style="{StaticResource DangerButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Información del Sistema -->
                <Border Style="{StaticResource ConfigCard}">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Información del Sistema" Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Versión:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="1.0.0" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Base de Datos:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="TallerMecanico" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Último Respaldo:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding UltimoRespaldo, StringFormat=dd/MM/yyyy HH:mm}" Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Total de Registros:" FontWeight="SemiBold" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalRegistros}" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>