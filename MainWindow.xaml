<Window x:Class="Proyecto_taller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Taller El Choco" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        Background="#1E1E2E" 
        MinHeight="600" 
        MinWidth="1000">

    <Window.Resources>
        <!-- Estilos mejorados -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Margin="5,1">
                            <ContentPresenter VerticalAlignment="Center" 
                                            HorizontalAlignment="Left" 
                                            Margin="15,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E55"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5A5A75"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveMenuButton" TargetType="Button" BasedOn="{StaticResource MenuButton}">
            <Setter Property="Background" Value="#4A90E2"/>
        </Style>

        <Style x:Key="TitleTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1E1E2E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="#2A2A3C">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header del Sidebar -->
            <StackPanel Grid.Row="0" Margin="0,20,0,30">
                <TextBlock Text="🔧" 
                          FontSize="32" 
                          HorizontalAlignment="Center" 
                          Foreground="#4A90E2"
                          Margin="0,0,0,10"/>
                <TextBlock Text="TALLER EL CHOCO" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Sistema de Gestión" 
                          Foreground="#CCCCCC" 
                          FontSize="12" 
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Menu Items -->
            <StackPanel Grid.Row="1" Margin="0,10">
                <Button x:Name="BtnInicio" 
                        Content="🏠  Inicio" 
                        Style="{StaticResource MenuButton}" 
                        Click="Inicio_Click"/>
                <Button x:Name="BtnClientes" 
                        Content="👥  Clientes" 
                        Style="{StaticResource MenuButton}" 
                        Click="Clientes_Click"/>
                <Button x:Name="BtnVehiculos" 
                        Content="🚗  Vehículos" 
                        Style="{StaticResource MenuButton}" 
                        Click="Vehiculos_Click"/>
                <Button x:Name="BtnServicios" 
                        Content="🛠️  Trabajos" 
                        Style="{StaticResource MenuButton}" 
                        Click="Servicios_Click"/>
                <Button x:Name="BtnReservas" 
                        Content="📅  Reservas" 
                        Style="{StaticResource MenuButton}" 
                        Click="Reservas_Click"/>
                <Button x:Name="BtnInventario" 
                        Content="📦  Inventario" 
                        Style="{StaticResource MenuButton}" 
                        Click="Inventario_Click"/>
                <Button x:Name="BtnFacturacion" 
                        Content="💰  Facturación" 
                        Style="{StaticResource MenuButton}" 
                        Click="Facturacion_Click"/>
                <Button x:Name="BtnReportes" 
                        Content="📊  Reportes" 
                        Style="{StaticResource MenuButton}" 
                        Click="Reportes_Click"/>
                <Button x:Name="BtnConfiguracion" 
                        Content="⚙️  Configuración" 
                        Style="{StaticResource MenuButton}" 
                        Click="Configuracion_Click"/>
            </StackPanel>

            <!-- Footer del Sidebar -->
            <StackPanel Grid.Row="2" Margin="10">
                <Rectangle Height="1" Fill="#4A4A5C" Margin="10,10"/>
                <TextBlock Text="v1.0.0" 
                          Foreground="#888888" 
                          FontSize="10" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm'}" 
                          Foreground="#888888" 
                          FontSize="10" 
                          HorizontalAlignment="Center"
                          xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#1E1E2E">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" 
                    Background="#2A2A3C" 
                    BorderBrush="#4A4A5C" 
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="TitleTextBlock" 
                              Grid.Column="0"
                              Text="Bienvenido al Sistema" 
                              VerticalAlignment="Center"
                              Foreground="White" 
                              FontSize="20" 
                              FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Button Content="📋" 
                                Style="{StaticResource MenuButton}" 
                                Width="40" Height="40" 
                                Margin="5,0"
                                ToolTip="Notificaciones"/>
                        <Button Content="👤" 
                                Style="{StaticResource MenuButton}" 
                                Width="40" Height="40" 
                                Margin="5,0"
                                ToolTip="Perfil de Usuario"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Frame x:Name="MainFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"
                   Background="#1E1E2E"/>
        </Grid>
    </Grid>
</Window>