<Window x:Class="Proyecto_taller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Sistema Taller El Choco" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        Background="#1E1B2E" 
        MinHeight="600" 
        MinWidth="1000">

    <Window.Resources>
        <!-- Paleta de colores -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryHover" Color="#4F46E5"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#1E1B2E"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#2D2A3E"/>
        <SolidColorBrush x:Key="SurfaceHover" Color="#3E3B4F"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4B5563"/>

        <!-- Estilo para botones del menú -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Margin="{TemplateBinding Margin}">
                            <Grid>
                                <!-- Indicador lateral -->
                                <Border x:Name="indicator"
                                        Width="4"
                                        HorizontalAlignment="Left"
                                        CornerRadius="0,2,2,0"
                                        Background="{StaticResource PrimaryColor}"
                                        Opacity="0"/>

                                <ContentPresenter VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Margin="20,0,16,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#652FA2"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="indicator"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0.5" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="indicator"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#AA81DA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón activo -->
        <Style x:Key="ActiveMenuButton" TargetType="Button" BasedOn="{StaticResource MenuButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#AA81DA" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Margin="{TemplateBinding Margin}">
                            <Grid>
                                <!-- Indicador lateral visible -->
                                <Border Width="4"
                                        HorizontalAlignment="Left"
                                        CornerRadius="0,2,2,0"
                                        Background="{StaticResource PrimaryColor}"/>

                                <ContentPresenter VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Margin="20,0,16,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones de la barra superior -->
        <Style x:Key="TopBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceHover}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ffffff15"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="{StaticResource SurfaceColor}">
            <Grid.Effect>
                <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header del Sidebar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource BackgroundDark}"
                    Padding="20"
                    Margin="12,12,12,0"
                    CornerRadius="12">
                <StackPanel>
                    <!-- Logo con gradiente -->
                    <Border Width="60" Height="60" CornerRadius="12"
                            HorizontalAlignment="Center" Margin="0,0,0,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6366F1" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="🔧" FontSize="32" 
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Foreground="White"/>
                    </Border>

                    <TextBlock Text="TALLER EL CHOCO" 
                              Foreground="{StaticResource TextPrimary}" 
                              FontSize="16" FontWeight="Bold" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Sistema de Gestión" 
                              Foreground="{StaticResource TextSecondary}" 
                              FontSize="11" HorizontalAlignment="Center"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Menu Items -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                <StackPanel Margin="8,0">
                    <Button x:Name="BtnInicio" Content="🏠  Inicio" 
                            Style="{StaticResource MenuButton}" Click="Inicio_Click"/>
                    <Button x:Name="BtnClientes" Content="👥  Clientes" 
                            Style="{StaticResource MenuButton}" Click="Clientes_Click"/>
                    <Button x:Name="BtnVehiculos" Content="🚗  Vehículos" 
                            Style="{StaticResource MenuButton}" Click="Vehiculos_Click"/>
                    <Button x:Name="BtnServicios" Content="🛠️  Trabajos" 
                            Style="{StaticResource MenuButton}" Click="Servicios_Click"/>
                    <Button x:Name="BtnReservas" Content="📅  Reservas" 
                            Style="{StaticResource MenuButton}" Click="Reservas_Click"/>
                    <Button x:Name="BtnInventario" Content="📦  Inventario" 
                            Style="{StaticResource MenuButton}" Click="Inventario_Click"/>
                    <Button x:Name="BtnFacturacion" Content="💰  Facturación" 
                            Style="{StaticResource MenuButton}" Click="Facturacion_Click"/>
                    <Button x:Name="BtnReportes" Content="📊  Reportes" 
                            Style="{StaticResource MenuButton}" Click="Reportes_Click"/>
                    <!-- Separador -->
                    <Border Height="1" Background="{StaticResource BorderColor}"
                            Margin="16,12" Opacity="0.3"/>

                    <!-- Solo visible para Administradores -->
                    <Button x:Name="BtnUsuarios" Content="👥  Usuarios" 
                            Style="{StaticResource MenuButton}" 
                            Click="Usuarios_Click"
                            Visibility="Collapsed"/>            

                    <Button x:Name="BtnCerrarSesion" Content="🚪  Cerrar Sesión" 
                            Style="{StaticResource MenuButton}" 
                            Click="CerrarSesion_Click"/>
                    <!-- Separador -->
                    <Border Height="1" Background="{StaticResource BorderColor}"
                            Margin="16,12" Opacity="0.3"/>

                    <Button x:Name="BtnConfiguracion" Content="⚙️  Configuración" 
                            Style="{StaticResource MenuButton}" Click="Configuracion_Click"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer del Sidebar -->
            <Border Grid.Row="2" Background="{StaticResource BackgroundDark}"
                    Padding="16" Margin="12,0,12,12" CornerRadius="12">
                <StackPanel>
                    <Border Height="1" Background="{StaticResource BorderColor}" 
                            Margin="0,0,0,12" Opacity="0.3"/>
                    <TextBlock Text="v1.0.0" 
                              Foreground="{StaticResource TextSecondary}" 
                              FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm'}" 
                              Foreground="{StaticResource TextSecondary}" 
                              FontSize="10" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="{StaticResource SurfaceColor}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,0,1" Padding="24,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" 
                                    ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título con subtítulo -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="TitleTextBlock" 
                                  Text="Bienvenido al Sistema" 
                                  Foreground="{StaticResource TextPrimary}" 
                                  FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock x:Name="SubtitleTextBlock"
                                  Text="Panel de Control Principal"
                                  Foreground="{StaticResource TextSecondary}"
                                  FontSize="12" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Botones de acción simples -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="👤" 
                                Style="{StaticResource TopBarButton}"
                                Margin="4,0"
                                ToolTip="Perfil de Usuario"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Frame x:Name="MainFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"
                   Background="{StaticResource BackgroundDark}"/>
        </Grid>
    </Grid>
</Window>